<h3>Goal:</h3>

<% if !@goal.comments.nil? %>
  <% @goal.comments.each do |comment| %>
    <p> <%= comment.body %></p>
  <% end %>
<% end %>

<h3>New Comment</h3>
<%= render 'goal_comments/new', goal: @goal %>

<table style="width:10%">

  <tr>
    <td>Title:</td>
    <td><%= @goal.title %></td>
  </tr>
  <tr>
    <td>Details:</td>
    <td><%= @goal.description %></td>
  </tr>
  <tr>
    <td>Visability:</td>
    <td><%= @goal.private? %></td>
  </tr>
  <tr>
    <td>Finished?:</td>
    <td><%= @goal.completed %></td>
  </tr>
  <tr>
    <td>Completed?</td>
    <td><%= render 'edit', goal: @goal %></td>
  </tr>
 

</table>
