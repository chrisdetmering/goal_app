
<h1>New Goal</h1>


<form action="<%= goals_url %>" method="POST">
  <input 
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="goal_title">Title:</label>
  <input type="text" name="goal[title]" id="goal_title">
  <br>

  <label for="goal_description">Description:</label>
  <br>
  <textarea rows="4" cols="20" name="goal[description]" id="goal_description"></textarea>
  <br>

  <label for="goal_private">Private?</label>
  <input type="checkbox" name="goal[private?]" value="true" id="goal_private">
  <br>

  <label for="goal_completed">Completed?</label>
  <input type="checkbox" name="goal[completed]" value="true" id="goal_completed">
  <br>

  <input type="submit" value="New Goal">
</form>